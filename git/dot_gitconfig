
;Example configs
    ; https://github.com/alikins/gitconfig/blob/master/gitconfig

; Setup name and email for repo
    ; > git config user.name  "name"
    ; > git config user.email "email@provider.com"

; Show numbers of lines changed - only for modified files
    ; > git diff --stat

[color]
    diff        = auto
    status      = auto
    branch      = auto
    interactive = auto
    ui          = auto

[color "status"]
    added = green
    changed = blue
    untracked = cyan
    deleted = red

[push]
    default = simple

[diff]
    ; external = meld
    tool = vimdiff

[merge]
    tool = vimdiff

[alias]
    ci       = commit -v
    st       = status -s
    in       = !git fetch && git log ..origin/master
    incoming = in
    alias    = config --get-regexp alias
